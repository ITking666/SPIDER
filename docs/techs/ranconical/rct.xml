	<label>hierarchical classification</label>
	<buttontext>hierarchical.rct</buttontext>
	<proc>hierarchical.rct</proc>
    </button>
    <button>
	<label>make class averages</label>
	<buttontext>classavg.rct</buttontext>
	<proc>classavg.rct</proc>
