    <buttontext>volfilt.rct</buttontext>
    <proc>volfilt.rct</proc>
  </button>
  <group name="Repeat for each class volume">
    <button>
	<label>align volume to reference</label>
	<buttontext>volalignprj.rct</buttontext>
	<proc>volalignprj.rct</proc>
    </button>
  </group>
  <button>
