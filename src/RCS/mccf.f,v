        IF (IRTFLG .EQ. -1) GOTO 130
        IF(ITYPE.NE.1) GOTO 145
        CALL OPFILE(.TRUE.,FILNAM,LUN3,'O',ITYPE,NSAM,NROW,NSLICE,
d46 1
