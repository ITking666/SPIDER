C        0         2         3         4         5         6         7 *
C23456789012345678901234567890123456789012345678901234567890123456789012
C***********************************************************************

      SUBROUTINE MRCG3D(P3D)

d27 2
d30 1
d34 4
a37 8
        PARAMETER (MAXREG=7)
        PARAMETER (MAXKEY=100)
        PARAMETER (MAXLOOP=999)
        REAL MAXPER
        PARAMETER (MAXPER=1.0e-6)
      LOGICAL*1   PTACTIVE(LS,LV),PARAMQ(4)
      COMMON /GENERAL/PTACTIVE,NUMPTS(LV),NTVW,NTPT,CIR(2),PARAMQ
      DIMENSION   P3D(3,LS)
d39 13
a51 13
C
c  go over x-y-z
	do    j=1,3
	cg=0.0
		DO  I=1,NTPT
	     	cg=cg+P3D(j,I)
		ENDDO
	cg=cg/ntpt
c subtract center of gravity
		DO  I=1,NTPT
	     	P3D(j,I)=P3D(j,I)-cg
		ENDDO
	enddo
@


