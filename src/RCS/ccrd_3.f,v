C CCRD_3.F                       ADDED PHASE CORRELATION MAR 02 AL & CR
a33 1
        LOGICAL ::          PHASE
d55 6
a60 18
              IF (.NOT. PHASE) THEN
                 DO I=1,NNNN
                    IX       = I-1
                    ARG      = SX*IX+ARGY
                    O(I,J,K) = X(I,J,K)*CONJG(BUF(I))*
     &                         CMPLX(COS(ARG),SIN(ARG))
                 ENDDO
              ELSE
C                PHASE CORRELATION
                 DO I=1,NNNN
                    IX  = I-1
                    ARG = SX*IX+ARGY
                    CTEMP    = X(I,J,K)*CONJG(BUF(I))*
     &                         CMPLX(COS(ARG),SIN(ARG))
                    O(I,J,K) = CTEMP / 
     &                    (SQRT(REAL(CTEMP)**2 + AIMAG(CTEMP)**2))        ENDDO
                 ENDDO
              ENDIF
