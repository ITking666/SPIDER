     &                       77,.FALSE.,MAXXT,MAXYT,PANG,IRTFLG)
d56 8
a63 4
        DO  I=1,L
           FREQ(I) = PANG(2,I)/P
           CCF(I)  = SIGN(1.0,PANG(4,I))
           OCCF(I) = PANG(4,I)**2
d125 1
