        CALL RDPRAI(NPEAK,MAXPEAK,NUM,0,999999,'.ENTER KEY NUMBERS',
a87 2
             IF (HEIGHT .GT. FMAX) FMAX = HEIGHT
             IF (HEIGHT .LT. FMIN) FMIN = HEIGHT
